@model Product
<div class="col-lg-4 col-md-6 col-sm-12 pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0"
             style="height:250px;">
            <img class="img-fluid w-100" src="@Model.Image" alt="">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@Model.Name</h6>
            <div class="d-flex justify-content-center">
                <h6>@Model.Promationprice</h6>
                <h6 class="text-muted ml-2"><del>@Model.Price</del></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a href="/product/details/@Model.Id" class="btn btn-sm text-dark p-0">
                <i class="fas fa-eye text-primary mr-1"></i>View Detail
            </a>
            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-sm text-dark p-0">
                    <i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart
                </button>
            </form>
        </div>
    </div>
</div>